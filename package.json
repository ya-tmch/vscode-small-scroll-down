{
    "name": "smart-cursor-moving",
	"displayName": "Smart cursor moving",
	"description": "CTRL + PAGE DOWN/PAGE UP (FN + ARROW DOWN/FN + ARROW DOWN for mac)",
	"version": "1.0.2",
	"publisher": "yatmch",
	"icon": "images/icon.jpg",
	"repository": "https://github.com/ya-tmch/vscode-small-scroll-down.git",
	"engines": {
		"vscode": "^1.62.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "smart-cursor-moving.up",
				"title": "Smart cursor move up"
			},
			{
				"command": "smart-cursor-moving.down",
				"title": "Smart cursor move down"
			}
		],
		"keybindings": [
			{
				"command": "smart-cursor-moving.up",
				"key": "ctrl+pageup",
				"when": "textInputFocus"
			},
			{
				"command": "smart-cursor-moving.down",
				"key": "ctrl+pagedown",
				"when": "textInputFocus"
			}
		],
		"configuration": {
			"properties": {
				"smart-cursor-moving.force": {
					"type": "string",
					"default": "30%",
					"description": "Number of lines or percent from editor height. \"30%\" or \"10\" lines"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.62.0",
		"@types/glob": "^7.1.4",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.1.0",
		"@typescript-eslint/parser": "^5.1.0",
		"eslint": "^8.1.0",
		"glob": "^7.1.7",
		"mocha": "^9.1.3",
		"typescript": "^4.4.4",
		"@vscode/test-electron": "^1.6.2"
	}
}
